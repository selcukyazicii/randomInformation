            var form = $("#asparagas").serialize();
            console.log(form);
            $.ajax({
                url: "/Admin/AddContents/",
                datatype: "json",
                type: "POST",
                content: "application/json;",
                data: form,
                async: true,
                success: function (result) {
                    if (result.Success) {
                        alert("başarılı");
                    }
