@model Entity.Concrete.Game
@{
    ViewData["Title"] = "GetPanel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body style="width:450px;">
    <form id="asparagas" asp-controller="Admin">
        <div class="form-group">
            <label for="formGroupExampleInput">Doğruluk</label>
            <input type="text" asp-for="content" class="form-control" id="formGroupExampleInput" placeholder="Doğruluk Giriniz">
        </div>
        <button type="submit" class="btn btn-success" onclick="DogrulukEkle()">Ekle</button>
        <br />
    </form>
</body>
@section Scripts{
